{
  "description": "context-saver hooks - auto-save large outputs",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/scripts/post-tool-handler.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
